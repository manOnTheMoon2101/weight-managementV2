{
	"name": "svelte-starter",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"prepare": "husky && svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"db": "drizzle-kit",
		"ui": "pnpm dlx shadcn-svelte@next",
		"auth": "pnpm dlx @better-auth/cli@latest",
		"auth:generate": "pnpm dlx @better-auth/cli@latest generate --y --output ./src/lib/server/schema/auth.schema.ts && prettier --write ./src/lib/server/schema/auth.schema.ts"
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.21.0",
		"@lucide/svelte": "^0.525.0",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/kit": "^2.17.2",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/vite": "^4.1.11",
		"@types/eslint": "^9.6.1",
		"@types/node": "^22.13.5",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^2.8.11",
		"clsx": "^2.1.1",
		"drizzle-kit": "^0.30.4",
		"eslint": "^9.21.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^2.46.1",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"layerchart": "^2.0.0-next.30",
		"prettier": "^3.5.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.20.2",
		"svelte-check": "^4.1.4",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^1.0.0",
		"tailwindcss": "^4.1.11",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.24.1",
		"vite": "^6.1.1"
	},
	"dependencies": {
		"ag-charts-community": "^12.0.1",
		"ag-grid-community": "^34.0.1",
		"better-auth": "^1.1.19",
		"drizzle-orm": "^0.39.3",
		"formsnap": "^2.0.1",
		"mode-watcher": "^1.1.0",
		"paneforge": "^1.0.0-next.6",
		"postgres": "^3.4.5",
		"svelte-sonner": "^1.0.5",
		"vaul-svelte": "^1.0.0-next.7"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
